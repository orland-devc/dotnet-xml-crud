@model IEnumerable<Book>
    @*
    Index.cshtml
*@
@{
    ViewBag.Title = "Books";
}

<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <h1 class="h3 mb-0 text-primary">Books Collection</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Add New Book
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="px-4">Title</th>
                        <th class="px-4">Author</th>
                        <th class="px-4 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center py-4">
                                <div class="text-muted">
                                    <i class="fas fa-books fa-2x mb-3"></i>
                                    <p>No books found. Start by adding a new book.</p>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var book in Model)
                        {
                            <tr>
                                <td class="px-4">@book.Title</td>
                                <td class="px-4">@book.Author</td>
                                <td class="px-4 text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@book.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit me-1"></i>Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@book.Id" 
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt me-1"></i>Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>